        android:name="com.ojrdude.minesweeperwithassistant.ui.game.GameControls"
        android:id="@+id/gameControls"
        tools:layout="@layout/fragment_game_controls" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.ojrdude.minesweeperwithassistant.ui.game.gameboard.GameBoard9by9"
